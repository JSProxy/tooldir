/* pages/classic/内置组件/表单组件/form/form.wxss */
.login-box{
  margin: 0 auto;
  width: 90%;
  height: 300px;
  border: 1rpx solid #eee;
  border-radius: 5rpx;
}
.login-title{
  margin: 10px 0;
  text-align: center;
}
.input-area{
  margin: 30px 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input-area input{
  border: 1rpx solid salmon;
  padding: 2px 10px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 10px;
  font-size: 13px;
  letter-spacing: 1px;
  width: 300rpx;
}
.btn-area{
  width: 100%;
  /* background-color: saddlebrown; */
  text-align: center;
  line-height: 0px;

}
.btn-area button:first-child{
  margin-right: 10px;
}
.btn-area button:nth-child(2){
  margin-left: 10px;
}